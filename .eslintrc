{
    "env": {
        // TBD: Split this file for client and server
        "browser": true,
        "node": true
    },
    "rules": {
        "strict": 0,
        "quotes": [2, "single", "avoid-escape"],
        "no-use-before-define": 0,
        "no-underscore-dangle": 0,
        "no-mixed-requires": 0,
        "space-unary-ops": 0,
        "no-var": 2
    },
    "ecmaFeatures": {
        "blockBindings": true,
        "forOf": true,
        "templateStrings": true,
        "generators": true,
        "arrowFunctions": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "modules": true,
        "spread": true,
        "templateStrings": true,
        "objectLiteralComputedProperties": true,
        "objectLiteralDuplicateProperties": true,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true
    },
}
